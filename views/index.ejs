<!DOCTYPE html>
<html>
  <head>
    <title>Forrest Cruise</title>
    <link href='fonts/font-awesome-4.5.0/css/font-awesome.min.css' type='text/css' rel='Stylesheet'/>
    <link href='css/styles.css' type='text/css' rel='Stylesheet'/>
    <link href='css/app.css' type='text/css' rel='Stylesheet'/>
  </head>
  <body class='column'>
    <div class='header dark row'>
      <span class='expand'>Welcome, <%= locals.user.name; %>!</span>
      <a href='#settings'><i class='fa fa-gear'></i> Change settings</a>
      <a href='/logout'><i class='fa fa-sign-out'></i> Sign out</a>
    </div>
    <div class='main column expand'>
      <div class='modal'>
        <span><img class='spinner' src='images/loader.gif'/> Loading&hellip;</span>
      </div>
    </div>
    
    <!-- Global data -->
    <script type='text/javascript'>
      DATABASE = '<%- locals.user.run_database %>';
      USER_ID = '<%- locals.user._id %>';
      USER_TOKEN = '<%- locals.user.user_token %>';
      WEBSOCKET_URL = '<%- wsUrl %>';
      <% if (locals.user.goal) { %>
        GOAL = <%- locals.user.goal %>;
      <% } %>
    </script>

    <!-- Non-NPM dependencies -->
    <script src='https://maps.googleapis.com/maps/api/js?key=<%- locals.google_maps_api_key %>&libraries=geometry' type='text/javascript'></script>

    <!-- Application -->
    <script src='js/bundle.js' type='text/javascript'></script>
  </body>
</html>
